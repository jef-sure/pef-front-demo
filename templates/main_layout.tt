	msg.articleHasBeenDeleted = '<p>Article has been deleted successfully</p><p><a href="/appIndex" class="btn">Go to main page</a></p>';

//-->
</script>

<script type="text/javascript" src="/jss/lib/jquery-2.1.3.min.js"></script>
